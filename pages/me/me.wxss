/* pages/me/me.wxss */
Page {
  height: 100%;
}
.beforeLogin {
height: 100%;
display: flex;
flex-direction: column;
justify-content: space-around;
}
.afterLogin {
  background-color: #f2f2f2;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  box-sizing: border-box;
}
.section1 {
  background-color: #82e3cb;
  width: 100%;
  border-bottom-right-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
}

.userInfo {
  text-align: center;
  padding-top: 10px;
}
.detailInfo {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding-bottom: 30rpx;
}
.detailInfo view {
  display: flex;
  flex-direction: column;
}
.detailInfo .number {
  font-size: 50rpx;
  text-align: center;
}
.detailInfo .title {
  text-align: center;
  font-size: 24rpx;
  color: gray;
}
.section2 {
  width: 90%;
  background-color: #fff;
  border: 1rpx solid #e6e6e6;
  border-radius: 30rpx;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  /* align-items: center; */
}
.section2 view {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.section2 text {
  padding-left: 40rpx;
}
.section2 image {
  height: 32rpx;
  width: 32rpx;
  padding-right: 20rpx;
}
br {
  width: 100%;
  background-color: #f2f2f2;
  height: 1rpx;
}
.section3 button {
  margin-top: 80rpx;
  margin-bottom: 20rpx;
  background-color: #f14141;
  color: white;
  border-radius: 40rpx;
}
.section4 text {
  color: gray;
}
.userInfo image {
  /* display: block; */
  overflow: hidden;
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 1rpx solid gray;
  vertical-align: middle;
}
.userInfo text {
  font-size: 64rpx;
}
